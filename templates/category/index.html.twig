{% extends 'base.html.twig' %}

{% block title %}Manage Categories{% endblock %}

{% block body %}
    <h1>Manage Categories</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.slug }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_category_show', {'id': category.id}) }}">Show</a>
                    <a class="btn btn-warning" href="{{ path('app_category_edit', {'id': category.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_category_new') }}">Create new</a>
{% endblock %}
